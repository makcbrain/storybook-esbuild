{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/node_modules", "!**/dist", "!.storybook/esbuild-out"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noLabelWithoutControl": "off",
				"noSvgWithoutTitle": "off"
			},
			"suspicious": {
				"noGlobalIsNan": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noUselessElse": "off",
				"noParameterAssign": "off",
				"useNumberNamespace": "off",
				"useBlockStatements": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":PACKAGE_WITH_PROTOCOL:",
							":PACKAGE:",
							":BLANK_LINE:",
							["**", "!**/*.css"],
							":BLANK_LINE:",
							"**/*.css"
						]
					}
				}
			}
		}
	}
}
