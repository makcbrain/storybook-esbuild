{
	"name": "@makcbrain/storybook-monorepo",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@makcbrain/storybook-framework-react-esbuild": "workspace:*",
		"@storybook/addon-docs": "9.1.10",
		"@storybook/react-vite": "9.1.10",
		"@types/bun": "latest",
		"@types/react": "19.1",
		"esbuild": "0.25.9",
		"husky": "9.1.7",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"storybook": "9.1.10",
		"typescript": "5.9.2"
	},
	"engines": {
		"bun": ">=1.3.0"
	},
	"packageManager": "bun@1.3.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "(cd packages/builder-esbuild && bun run build) && (cd packages/framework-react-esbuild && bun run build)",
		"lint": "bunx biome check --write",
		"typecheck": "bunx tsc --noEmit",
		"test": "bun test --no-fail-fast",
		"storybook": "bunx storybook dev -p 6006",
		"build-storybook": "storybook tools",
		"tsl": "bun run build && bun run storybook",
		"precommit": "bun run lint && git add . && bun run typecheck && bun run test",
		"prepare": "husky"
	}
}
